RewriteEngine On

# =====================================================
# REDIRECTIONS CANONIQUES
# =====================================================

# 1. Forcer HTTPS ET www ensemble
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} !^www\.mistralpro-reno\.fr$ [NC]
RewriteRule ^(.*)$ https://www.mistralpro-reno.fr/$1 [L,R=301]

# 2. REDIRECTIONS 301 SPÉCIFIQUES VERS .HTML (SEO FIX)

# Services
RewriteCond %{REQUEST_URI} ^/services$
RewriteRule ^services$ /services.html [L,R=301]

# Projets
RewriteCond %{REQUEST_URI} ^/projets$
RewriteRule ^projets$ /projets.html [L,R=301]

# Devis
RewriteCond %{REQUEST_URI} ^/devis$
RewriteRule ^devis$ /devis.html [L,R=301]

# Cost Calculator
RewriteCond %{REQUEST_URI} ^/cost_calculator$
RewriteRule ^cost_calculator$ /cost_calculator.html [L,R=301]

# Dégât des Eaux
RewriteCond %{REQUEST_URI} ^/degat-des-eaux$
RewriteRule ^degat-des-eaux$ /degat-des-eaux.html [L,R=301]

# Contact
RewriteCond %{REQUEST_URI} ^/contact$
RewriteRule ^contact$ /contact.html [L,R=301]

# Landing
RewriteCond %{REQUEST_URI} ^/landing$
RewriteRule ^landing$ /landing.html [L,R=301]

# Mentions Légales
RewriteCond %{REQUEST_URI} ^/mentions-legales$
RewriteRule ^mentions-legales$ /mentions-legales.html [L,R=301]

# 3. Page 404
ErrorDocument 404 /404.html

# =====================================================
# COMPRESSION BROTLI (Prioritaire si disponible)
# =====================================================
<IfModule mod_brotli.c>
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css
    AddOutputFilterByType BROTLI_COMPRESS application/javascript application/json
    AddOutputFilterByType BROTLI_COMPRESS application/xml application/xhtml+xml
    AddOutputFilterByType BROTLI_COMPRESS image/svg+xml
</IfModule>

# =====================================================
# COMPRESSION GZIP (Fallback si Brotli indisponible)
# =====================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE application/xml application/xhtml+xml
    AddOutputFilterByType DEFLATE image/svg+xml

    <FilesMatch "\.(css|js)$">
        SetOutputFilter DEFLATE
    </FilesMatch>
</IfModule>

# Headers pour vérifier la compression
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|html|xml|txt)$">
        Header append Vary Accept-Encoding
    </FilesMatch>
</IfModule>

# =====================================================
# CACHE NAVIGATEUR
# =====================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
</IfModule>

# =====================================================
# SECURITE
# =====================================================
<FilesMatch "(^\.htaccess|\.htpasswd|\.git|\.env)">
    Order Allow,Deny
    Deny from all
</FilesMatch>
Options -Indexes
<IfModule mod_headers.c>
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-Content-Type-Options "nosniff"
</IfModule>